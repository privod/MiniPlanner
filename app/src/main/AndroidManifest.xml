<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.home.miniplanner">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.PlansActivity"
            android:label="@string/activity.plans"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.edit.PlanEditActivity"
            android:label="@string/activity.plan_edit"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".view.PartiesActivity"
            android:label="@string/activity.parties"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.edit.PartyEditActivity"
            android:label="@string/activity.party_edit"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".view.PartyContentActivity"
            android:label="@string/title_activity_party_content"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.edit.BayEditActivity"
            android:label="@string/activity.bay_edit"
            android:windowSoftInputMode="stateVisible"/>
        <activity
            android:name=".view.edit.ContributionEditActivity"
            android:label="@string/activity.contribution_edit"
            android:windowSoftInputMode="stateVisible"/>
    </application>

</manifest>
