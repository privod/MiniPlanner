<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.home.miniplanner" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.PlansActivity"
            android:label="@string/title_plans"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.edit.PlanEditActivity"
            android:label="@string/title_plan_edit"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name=".view.PartiesActivity"
            android:label="@string/title_parties"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".view.edit.PartyEditActivity"
            android:label="@string/title_party_edit"
            android:windowSoftInputMode="stateVisible" >
        </activity>
    </application>

</manifest>
