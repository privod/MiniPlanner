<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <include layout="@layout/widget_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <RelativeLayout
            style="@style/AppTheme.LayoutListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_cost_by" />

            <TextView
                android:id="@+id/text_vew_total_cost_by"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="100" />

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/text_vew_label_debt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_vew_total_cost_by"
                tools:text="Долг/Переплата" />

            <TextView
                android:id="@+id/text_vew_debt"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_vew_total_cost_by"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="200" />

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_vew_label_debt"
                tools:text="Доля участия" />

            <TextView
                android:id="@+id/text_vew_share"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_vew_label_debt"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="1" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/AppTheme.LayoutListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sum_out" />

            <TextView
                android:id="@+id/text_vew_sum_out"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:text="50" />

            <TextView
                android:id="@+id/text_vew_label_sum_in"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_vew_sum_out"
                android:text="@string/label_sum_in" />

            <TextView
                android:id="@+id/text_vew_sum_in"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_vew_sum_out"
                android:layout_alignParentEnd="true"
                tools:text="100" />

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.AppBarLayout>
