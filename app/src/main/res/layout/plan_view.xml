<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal"
    android:paddingTop="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_normal"
    android:background="?android:attr/activatedBackgroundIndicator">

    <ru.home.miniplanner.view.widget.AvatarLetterView
        android:layout_width="@dimen/size_avatar"
        android:layout_height="@dimen/size_avatar"
        android:id="@+id/avatar_letter"
        android:text="N"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        style="@style/AppTheme.AvatarLetter"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/text_view_name"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/avatar_letter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/text_view_date_reg"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_below="@+id/text_view_name"
        android:layout_alignStart="@+id/text_view_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cost total"
        android:id="@+id/text_view_cost_total"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        style="@style/TextAppearance.AppCompat.Display1" />

</RelativeLayout>