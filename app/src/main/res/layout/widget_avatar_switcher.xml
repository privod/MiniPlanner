<?xml version="1.0" encoding="utf-8"?>
<ru.home.miniplanner.view.widget.AvatarViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_switcher_avatar"
    android:layout_width="@dimen/size_avatar"
    android:layout_height="@dimen/size_avatar"
    android:animateFirstView="false"
    android:inAnimation="@anim/avatar_in"
    android:outAnimation="@anim/avatar_out"
    >

    <ImageView
        android:id="@+id/icon_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:id="@+id/icon_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_checked"
        android:background="@drawable/circle"
        />
    <!--android:visibility="gone"-->
    <!--android:background="@drawable/circle"-->

</ru.home.miniplanner.view.widget.AvatarViewSwitcher>